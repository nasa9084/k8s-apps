global:
  slack_api_url: {{getenv "ALERTMANAGER_SLACK_URL"}}

route:
  receiver: slack

receivers:
  - name: slack
    slack_configs:
      - channel: "#emergency"
        username: Alertmanager
        fields:
          - title: target
            value: {{"'{{.CommonLabels.target }}'"}}
        text: {{"'{{ .CommonAnnotations.description }}'"}}
        title: {{"'{{ .CommonAnnotations.summary }}'"}}
        icon_emoji: ':fire:'
        title_link: ''
